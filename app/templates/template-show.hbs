<div class="w3-row">

    <div class="white_background w3-card-2 w3-col s8 m8 l8 margin-20px">
        <h3 class="w3-margin-left w3-margin-top negative-margin-bottom-10"><span>{{model.templateName}}</span></h3>
        <!--ID: {{model.id}}-->
      {{#link-to 'template-show.send-template' (query-params template=model.id)}}<button class="w3-btn w3-dark-grey btn-1 negative-margin-top-30 margin-right-20 float-right">Send Template</button>{{/link-to}}
      {{outlet}}
        <hr>
        <ul style="list-style:none">
          {{#each model.templateFields as |templateField|}}
              <li class=" w3-col s4 m4 l4 ">
                  <label  class="float-right w3-padding-16" for="{{templateField.field.fieldName}}">{{templateField.field.fieldName}}</label>
              </li>
              <li class=" w3-col s8 m8 l8">
                {{input type="text" name=templateField.field.fieldName }}
              </li>
          {{/each}}
        </ul>
    </div>


</div>

<div class="w3-row"></div>